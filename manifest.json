{
  "manifest_version": 3,
  "name": "Cookie Viewer",
  "version": "1.0",
  "description": "View cookies for the current page",
  "permissions": ["cookies", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": ["*://*/*"]
}
